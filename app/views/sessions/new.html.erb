<section>
  <center>
    <form class="form" action="/sessions" method="post">

      <p class="form-title">Sign in to your account</p>
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

      <div class="input-container" for="username">
        <input id="username" name="user[username]" type="username" placeholder="Enter Username", >
        <span></span>
      </div>

      <div class="input-container" for="password">
        <input id="password" name="user[password]" type="password" placeholder="Enter password">
      </div>

      <button type="submit" class="submit" value="Sign in">
        Sign in
      </button>

      <p class="signup-link">
        No account? <a><%= link_to 'Sign-Up', users_new_path %></a>
      </p>
    </form>
  </center>
</section>



